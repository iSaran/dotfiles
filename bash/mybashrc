# Source aliases
if [ -f $DOTFILES_DIR/bash/aliases.bash ]; then
    . $DOTFILES_DIR/bash/aliases.bash
fi

# Source functions 
if [ -f $DOTFILES_DIR/bash/functions.bash ]; then
    . $DOTFILES_DIR/bash/functions.bash
fi

# Export to path Iason Dotfiles if dotfiles is installed
if [ -d $DOTFILES_DIR/bin ]; then
    export PATH=$PATH:$DOTFILES_DIR/bin
fi

if [ -f $DOTFILES_DIR/bash/prompt.bash ]; then
    . $DOTFILES_DIR/bash/prompt.bash
fi
